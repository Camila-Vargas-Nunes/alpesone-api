	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Log da requisição",
					"console.log('Fazendo requisição para: ' + pm.request.url);",
					"console.log('Método: ' + pm.request.method);",
					"console.log('Headers: ' + JSON.stringify(pm.request.headers));"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Testes automáticos",
					"pm.test('Status code is 200, 201, 401, 422, or 404', function () {",
					"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 401, 422, 404]);",
					"});",
					"",
					"pm.test('Response has required structure', function () {",
					"    const responseJson = pm.response.json();",
					"    pm.expect(responseJson).to.have.property('success');",
					"    if (pm.response.code === 200 || pm.response.code === 201) {",
					"        pm.expect(responseJson.success).to.be.true;",
					"    }",
					"});",
					"",
					"pm.test('Response time is less than 2000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(2000);",
					"});"
				]
			}
		}
	],
